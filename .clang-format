---
Language:  Cpp
Standard: Cpp11

BasedOnStyle:  LLVM
#BasedOnStyle: Google

DerivePointerAlignment: false
PointerAlignment: Left

ColumnLimit: 0

IncludeBlocks: Regroup #Merge
IncludeCategories:
  - Regex:           '^"(aheaders*.h)/'
    Priority:        10

BreakBeforeBraces: Custom
BraceWrapping:
    AfterEnum: true
    AfterStruct: true
    AfterClass: true
    SplitEmptyFunction: true
    AfterControlStatement: false
    AfterNamespace: false
    AfterFunction: true
    AfterUnion: true
    AfterExternBlock: false
    BeforeCatch: false
    BeforeElse: false
    SplitEmptyRecord: true
    SplitEmptyNamespace: true    
    

    
    
    


